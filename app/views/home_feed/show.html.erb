<%= stylesheet_link_tag('home_feed.scss') %>

<% if @tag != nil %>
    <h1>Posts Tagged With <%= @tag.name %></h1>
<% else %>
    <h1>Home</h1>
<% end %>

<table>
	<% @posts.where("kind = 0").order("voteCount DESC").order("created_at DESC").each do |post|%>
		<div class = "highlight_row">
		    <tr>
		    	<td><%= link_to "#{post.text}", controller: "post", action: "show", id: post.id %></td>
		    	<td><%= post.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("Posted on %m/%d/%Y at %I:%M%p") %></td>
		    	<td><%= link_to "#{post.user.firstName} #{post.user.lastName}", controller: "profile", action: 'show', user_id: post.user.id%></td>
		    </tr>
		</div>
	<% end %>
</table>
