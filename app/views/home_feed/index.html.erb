<%= stylesheet_link_tag('home_feed.scss') %>


<h1>Home</h1>

<table>
	<% @posts.order("voteCount DESC").order("created_at DESC").each do |post|%>
		<div class = "highlight_row">
		    <tr>
		    	<td><%= post.text %></td>
		    	<td><%= post.created_at %></td>
		    	<td><%= link_to "#{post.user.firstName} #{post.user.lastName}", controller: "profile", action: 'show', user_id: post.user.id%></td>
		    </tr>
		</div>
	<% end %>
</table>