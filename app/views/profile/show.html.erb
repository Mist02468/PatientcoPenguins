<head>
<meta http-equiv="Content-Type" content="text/html; charset=gb2312" />
<style type="text/css">
.a {
    background-color: ;
    border:3px #228B22 solid;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
border-bottom-left-radius: 10px;
border-bottom-right-radius: 10px;
height:310px;
width:225px;
padding:20px;
}
.postDiv {
  margin:auto;
  max-width: 700px;
}
</style>
</head>
<body>
	<div class="postDiv">
		<div width="50%" style="float:left;">
			<p class="a">
				<font size="6" color=#32CD32> <%= @user.firstName %> </font>
				<br></br>
				<font size="6" color=#32CD32> <%= @user.lastName %> </font>
				<br></br>
				<font size="3"> <%= @user.location %> </font>
				<br></br>
				<font size="3"> <%= @user.emailAddress %> </font>
				<br></br>
				<font size="3"> <%= @user.industry %> </font>
				<br></br>
				<font size="3"> <%= @user.company %> </font>
				<br></br>
				<font size="3"> <%= @user.position %> </font>
			</p>
		</div>
		<div width="50%" style="float:right;">
			<div class="posts">
				<table>
					<% @posts.where("user_id = #{session[:user_id]}").where("kind = 0").order("voteCount DESC").order("created_at DESC").each do |post|%>
						<div class = "highlight_row">
						    <tr>
						    	<td><%= link_to "#{post.text}", controller: "post", action: "show", id: post.id %></td>
						    	<td><%= post.created_at %></td>
						    	<td><%= link_to "#{post.user.firstName} #{post.user.lastName}", controller: "profile", action: 'show', user_id: post.user.id%></td>
						    </tr>
						</div>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</body>
