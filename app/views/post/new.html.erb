<%= stylesheet_link_tag('post.scss') %>

<div class="postDiv">
	<h2> Create a Post</h2>
	<%= form_tag(:action => 'addTag') do %>
		<%= hidden_field_tag(:tagsToAdd, @tagsToAdd) %>
		<%= text_field(:tag, :name, :placeholder => "tag me!", :class => "tag_box") %>
		<%= submit_tag("Add Tag to Post", :class => "button") %>
	<% end %>
	<ul>
		<% @tagsToAdd.each do |t| %>
				<li class="tag"><%= t %></li>
		<% end %>
	</ul>
</br>
	<%= form_tag(:action => 'create') do %>
		<%= hidden_field_tag(:tagsToAdd, @tagsToAdd) %>
		<%= text_area(:post, :text, :class => "text_field", :placeholder => "write post here") %><br>
		<%= submit_tag("Post", :class => "button_submit") %>
	<% end %>
	<%= link_to "Back to Home","../home_feed/index", :html => {:class => 'link'}%>
</div>
