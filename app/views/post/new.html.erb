<%= form_tag(:action => 'create') do %>
	<%= hidden_field_tag(:tagsToAdd, @tagsToAdd) %>
	<%= text_field(:post, :text) %><br>
	<%= submit_tag("Post") %>
<% end %>

<table>
  <% @tagsToAdd.each do |t| %>
    <tr>
      <td><%= t %></td>
    </tr>
  <% end %>
</table>

<%= form_tag(:action => 'addTag') do %>
	<%= hidden_field_tag(:tagsToAdd, @tagsToAdd) %>
	<%= text_area(:tag, :name) %><br>
	<%= submit_tag("Add Tag to Post") %>
<% end %>
